# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://stmuser:CHANGE_THIS_PASSWORD@postgres:5432/stmcustomer?schema=public"

# For Docker Compose
POSTGRES_USER=stmuser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=stmcustomer
POSTGRES_PORT=5432

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="GENERATE_RANDOM_32_CHAR_STRING"

# Your production domain
NEXTAUTH_URL="https://your-domain.com"

# Set to true if behind proxy (Nginx, Coolify, etc.)
AUTH_TRUST_HOST=true

# Legacy JWT secret (generate random string)
JWT_SECRET="GENERATE_RANDOM_JWT_SECRET"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Public-facing URL
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Environment
NODE_ENV=production

# Application port (default: 3000)
APP_PORT=3000

# ============================================
# WEB PUSH NOTIFICATIONS (Optional)
# ============================================
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY="YOUR_VAPID_PUBLIC_KEY"
VAPID_PRIVATE_KEY="YOUR_VAPID_PRIVATE_KEY"

# ============================================
# PAYMENT GATEWAY - RAZORPAY (Optional)
# ============================================
RAZORPAY_KEY_ID="rzp_live_YOUR_KEY_ID"
RAZORPAY_KEY_SECRET="YOUR_RAZORPAY_SECRET"

# ============================================
# AWS SES - EMAIL SERVICE (Optional)
# ============================================
AWS_ACCESS_KEY_ID="YOUR_AWS_ACCESS_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_AWS_SECRET_KEY"
AWS_REGION="us-east-1"
AWS_SES_FROM_EMAIL="noreply@your-domain.com"

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
REDIS_URL="redis://redis:6379"
REDIS_PORT=6379

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=""

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# RATE LIMITING
# ============================================
# Requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# PRISMA CONFIGURATION
# ============================================
PRISMA_CLIENT_ENGINE_TYPE=library

# ============================================
# BACKUP CONFIGURATION (Optional)
# ============================================
# S3 bucket for backups
BACKUP_S3_BUCKET=""
BACKUP_S3_REGION=""
