# Example Environment Variables
# Copy this file to .env and update with your actual values

# Database - Point to your PostgreSQL instance
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# JWT Secret (generate a strong one for production)
JWT_SECRET="your-super-secret-jwt-key"

# Web Push Notifications (use: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Auth Config (NextAuth / Auth.js)
AUTH_SECRET="your-auth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# App Config
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Prisma Client Engine (useful for certain deployment environments)
PRISMA_CLIENT_ENGINE_TYPE="library"

# Razorpay Config
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
