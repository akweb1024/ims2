  publicUrl         String?
  auditScore        Float?
  auditData         Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  indexingMaster    JournalIndexing @relation(fields: [indexingId], references: [id])
  journal           Journal         @relation(fields: [journalId], references: [id], onDelete: Cascade)

  @@unique([journalId, indexingId])
  @@index([journalId])
  @@index([status])
}

model Publisher {
  id        String    @id @default(uuid())
  name      String    @unique
  code      String    @unique
  country   String?
  website   String?
  email     String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  journals  Journal[]

  @@index([code])
}

