  totalDowntime  Int                 @default(0)
  notifyEmail    Boolean             @default(true)
  notifyWhatsapp Boolean             @default(true)
  companyId      String?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  category       String?
  logs           WebsiteMonitorLog[]
}

model WebsiteMonitorLog {
  id           String         @id @default(uuid())
  monitorId    String
  status       String
  statusCode   Int?
  responseTime Int?
  reason       String?
  checkedAt    DateTime       @default(now())
  monitor      WebsiteMonitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@index([monitorId])
  @@index([checkedAt])
}

model AppConfiguration {
  id          String   @id @default(uuid())
  companyId   String?
  category    String
  key         String
  value       String
  isActive    Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?
  company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([companyId, category, key])
  @@index([companyId])
  @@index([category])
}

model JournalDomain {
  id          String    @id @default(uuid())
  name        String    @unique
  code        String    @unique
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  journals    Journal[]

  @@index([code])
}

model JournalIndexing {
  id          String                    @id @default(uuid())
  name        String                    @unique
  code        String                    @unique
  description String?
  tier        String?
  isActive    Boolean                   @default(true)
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  tracking    JournalIndexingTracking[]
  journals    Journal[]                 @relation("JournalToIndexing")

  @@index([code])
  @@index([tier])
}

model JournalIndexingTracking {
  id                String          @id @default(uuid())
  journalId         String
  indexingId        String
  status            String          @default("PLANNED")
