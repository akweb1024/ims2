model ArticleVersion {
  id            String   @id @default(uuid())
  articleId     String
  versionNumber Int
  fileUrl       String
  submittedAt   DateTime @default(now())
  changelog     String?
  article       Article  @relation(fields: [articleId], references: [id])

  @@index([articleId])
}

model ConferenceCommitteeMember {
  id           String     @id @default(uuid())
  conferenceId String
  userId       String?
  name         String
  role         String
  affiliation  String?
  bio          String?
  photoUrl     String?
  displayOrder Int        @default(0)
  createdAt    DateTime   @default(now())
  conference   Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  user         User?      @relation(fields: [userId], references: [id])
}

model JournalReviewer {
  id               String              @id @default(uuid())
  journalId        String
  userId           String
  specialization   String[]
  bio              String?
  isActive         Boolean             @default(true)
  joinedDate       DateTime            @default(now())
  totalReviews     Int                 @default(0)
  completedReviews Int                 @default(0)
  averageRating    Float?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  journal          Journal             @relation(fields: [journalId], references: [id], onDelete: Cascade)
  user             User                @relation("ReviewerProfile", fields: [userId], references: [id])
  assignments      ReviewAssignment[]
  certificates     ReviewCertificate[]

  @@unique([journalId, userId])
  @@index([journalId])
  @@index([userId])
  @@index([isActive])
}

model ReviewAssignment {
  id               String          @id @default(uuid())
  articleId        String
  reviewerId       String
  assignedBy       String
  assignedDate     DateTime        @default(now())
  dueDate          DateTime
  status           ReviewStatus    @default(PENDING)
  priority         ReviewPriority  @default(NORMAL)
  round            Int             @default(1)
  reminderSent     Boolean         @default(false)
  lastReminderDate DateTime?
  notes            String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  article          Article         @relation(fields: [articleId], references: [id], onDelete: Cascade)
  assignedByUser   User            @relation("AssignedReviews", fields: [assignedBy], references: [id])
  reviewer         JournalReviewer @relation(fields: [reviewerId], references: [id])
  report           ReviewReport?

  @@index([articleId])
  @@index([reviewerId])
  @@index([status])
  @@index([dueDate])
}

model ReviewReport {
  id                   String           @id @default(uuid())
  assignmentId         String           @unique
  overallRating        Int
  originality          Int
  methodology          Int
  clarity              Int
  significance         Int
  commentsToEditor     String
  commentsToAuthor     String?
  recommendation       Recommendation
  confidentialComments String?
  submittedDate        DateTime         @default(now())
  validatedBy          String?
  validatedDate        DateTime?
  isValidated          Boolean          @default(false)
  rejectionReason      String?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  assignment           ReviewAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  validator            User?            @relation("ValidatedReports", fields: [validatedBy], references: [id])

  @@index([assignmentId])
  @@index([isValidated])
}

model ReviewCertificate {
  id                String          @id @default(uuid())
  reviewerId        String
  articleId         String
  journalId         String
  certificateNumber String          @unique
  issueDate         DateTime        @default(now())
  reviewDate        DateTime
  articleTitle      String
  reviewerName      String
  journalName       String
  pdfUrl            String?
  issuedBy          String
  metadata          Json?
  createdAt         DateTime        @default(now())
  article           Article         @relation(fields: [articleId], references: [id])
  issuer            User            @relation("IssuedCertificates", fields: [issuedBy], references: [id])
  journal           Journal         @relation(fields: [journalId], references: [id])
  reviewer          JournalReviewer @relation(fields: [reviewerId], references: [id])

  @@index([reviewerId])
  @@index([certificateNumber])
  @@index([journalId])
}

model WebsiteMonitor {
  id             String              @id @default(uuid())
  name           String
  url            String
  frequency      Int                 @default(5)
  isPaused       Boolean             @default(false)
  lastCheck      DateTime?
  status         String              @default("PENDING")
  upsince        DateTime?
