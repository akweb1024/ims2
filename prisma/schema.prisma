model RevenueTransaction {
  id                    String   @id @default(uuid())
  companyId             String
  
  // Transaction Details
  transactionNumber     String   @unique // Auto-generated: RT-YYYYMMDD-XXXX
  amount                Float
  currency              String   @default("INR")
  paymentMethod         String   // RAZORPAY, CASH, CHEQUE, DD, BANK_TRANSFER, UPI, CARD, OTHER
  paymentDate           DateTime
  
  // Customer Information
  customerName          String?
  customerEmail         String?
  customerPhone         String?
  customerProfileId     String?
  institutionId         String?
  
  // Payment Proof
  referenceNumber       String?  // Cheque number, DD number, Transaction ID, etc.
  bankName              String?
  proofDocument         String?  // URL to uploaded proof
  
  // Attribution
  claimedByEmployeeId   String?  // Employee who claimed this revenue
  approvedByManagerId   String?  // Manager who verified
  departmentId          String?
  
  // Status & Verification
  status                RevenueStatus @default(PENDING)
  verificationStatus    VerificationStatus @default(UNVERIFIED)
  verifiedAt            DateTime?
  
  // Linking
  workReportId          String?  // If claimed via work report
  invoiceId             String?  // If linked to invoice
  paymentId             String?  // If from payment gateway
  
  // Metadata
  description           String?
  notes                 String?
  tags                  Json?    // For categorization
  
  // Audit
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  createdBy             String?
  
  // Relations
  company               Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  claimedBy             EmployeeProfile? @relation("ClaimedRevenue", fields: [claimedByEmployeeId], references: [id])
  approvedBy            EmployeeProfile? @relation("ApprovedRevenue", fields: [approvedByManagerId], references: [id])
  department            Department? @relation(fields: [departmentId], references: [id])
  customerProfile       CustomerProfile? @relation(fields: [customerProfileId], references: [id])
  institution           Institution? @relation(fields: [institutionId], references: [id])
  workReport            WorkReport? @relation(fields: [workReportId], references: [id])
  invoice               Invoice? @relation(fields: [invoiceId], references: [id])
  payment               Payment? @relation(fields: [paymentId], references: [id])
  
  claims                RevenueClaim[]
  
  @@index([companyId])
  @@index([transactionNumber])
  @@index([claimedByEmployeeId])
  @@index([status])
  @@index([paymentDate])
  @@index([customerProfileId])
}

model RevenueClaim {
  id                    String   @id @default(uuid())
  revenueTransactionId  String
  employeeId            String
  workReportId          String?
  
  claimDate             DateTime @default(now())
